{% if (jobTrackings | length) < 1 %}
  Aucun
{% else %}

  <table class="table table-striped">
    <thead>
      <tr>
        <th>
          Date
        </th>
        <th>
          Action
        </th>
        {% if notEditing %}

          <th></th>
        {% endif %}
      </tr>
    </thead>
    <tbody>
      {% for jobTracking in jobTrackings %}
        <tr>
          <td>
            {{ jobTracking.createdAt | date('d/m/Y') }}
          </td>
          <td>
            {{ jobTracking.action.name }}
          </td>
          {% if notEditing %}
            <td>
              <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#handleModifyModal" data-job-tracking-id="{{ jobTracking.id }}" data-job-tracking-action="{{ jobTracking.action.id }}" data-job-tracking-created-at="{{ jobTracking.createdAt | date('c') | slice(0,10)}}">
                Modifier
              </button>
            </td>
          {% endif %}
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}
