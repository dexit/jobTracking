
{% set action =   '/new_job_tracking/' ~ job.id  %}

{{ form_start(formAction, {attr: {'novalidate': 'novalidate', 'action': action}}) }}
{# {{ form_widget(formAction) }} #}
{% for child in formAction.name %}
  <div class="form-check">
    {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
    {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
  </div>
{% endfor %}
<div class="d-flex justify-content-end gap-3">
  <button type="submit" class="btn btn-success d-block">Valider</button>
</div>
{{ form_end(formAction) }}
  