{% extends 'base.html.twig' %}

{% block title %}
	Votre suivi
{% endblock %}


{% block stylesheets %}
{{ parent() }}
    {{ encore_entry_link_tags('synthese') }} {# Inclure le fichier CSS compilé #}
{% endblock %}


{% block javascripts %}
{{ encore_entry_script_tags('synthese') }}

{% endblock %}
{% block body %}
	<div	class="js-chart-data"	data-chart-jobs-data="{{ jobsData |serialize(format = 'json') }}"	data-chart-responses-data="{{ responsesData |serialize(format = 'json') }}" data-chart-categories="{{ categories |serialize(format = 'json') }}"></div>
	<h4>Candidatures en cours <span class="badge text-bg-secondary">{{ jobsInProgress | length}}</span></h4>
	{% if jobsInProgress | length > 0 %}
	<div class="in-progress mb-3">
		{% include "home/inProgress.html.twig" %}
	{% else %}
		<p>
			Pas de candidature en cours
			<a	href="">
				Ajouter une candidature
			</a>
		</p>
	{% endif %}
</div>
<hr>
<h4>Candidatures de l'année <span class="badge text-bg-secondary">{{ jobsData |reduce((carry, v) => carry + v ) }}</h4>
	<p>Delai moyen d'une candidature {{ delay }} jours</p>
<div id="chart"></div>
</div>
{% endblock %}
