<div	class="col-auto">
	{% set action =   '/candidature/' ~ job.id  %}
	
	{{ form_start(form, {'attr': {'novalidate': 'novalidate' , 'action': action}}
	) }}
	<div	class="d-flex align-items-center gap-3 flex-wrap">
		<div	class="col">
			{{ form_label(form.recruiter) }}
			{{ form_widget(form.recruiter, {attr: {'disabled': not isNew} }) }}
		</div>
		<div	class="col">
			{{ form_label(form.title) }}
			{{ form_widget(form.title, {attr: {'disabled': not isNew} }) }}
		</div>
	</div>
		{{ form_label(form.offerDescription) }}
		{{ form_widget(form.offerDescription, {attr: {'disabled': not isNew} }) }}
		<div	class="col-auto">
		{{ form_label(form.created_at) }}
		{{ form_widget(form.created_at, {attr: {'disabled': not isNew} }) }}
	</div>
	<div  class='action d-none'>

		<div	class="d-flex align-items-stretch gap-3 flex-wrap">
			<div	class="col">
				{{ form_label(form.source) }}
				{{ form_widget(form.source, {attr: {'disabled': not isNew} }) }}
			</div>
	
		</div>
		{{ form_label(form.coverLetter) }}
		{{ form_widget(form.coverLetter, {attr: {'disabled': not isNew} }) }}
	</div>


	{% if isNew %}
		<div	class="d-flex justify-content-end">
			<button	type="submit"	class="btn btn-success  d-block">
				Valider
			</button>
		</div>
	{% endif %}

	{{ form_end(form) }}

</div>
