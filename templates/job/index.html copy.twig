{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>Job index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Recruiter</th>
                <th>Title</th>
                <th>OfferDescription</th>
                <th>CreatedAt</th>
                <th>CoverLetter</th>
                <th>Source</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.recruiter }}</td>
                <td>{{ job.title }}</td>
                <td>{{ job.offerDescription }}</td>
                <td>{{ job.createdAt ? job.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.coverLetter }}</td>
                <td>{{ job.source }}</td>
                <td>
                    {# <a href="{{ path('app_job_show', {'id': job.id}) }}">show</a> #}
                    {# <a href="{{ path('app_job_edit', {'id': job.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_job_new') }}">Create new</a> #}
{% endblock %}
