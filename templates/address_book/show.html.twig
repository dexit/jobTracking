{% extends 'base.html.twig' %}

{% block title %}AddressBook{% endblock %}

{% block body %}
    <h1>AddressBook</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address_book.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ address_book.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ address_book.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ address_book.email }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ address_book.company }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ address_book.createdAt ? address_book.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ address_book.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_address_book_index') }}">back to list</a>

    <a href="{{ path('app_address_book_edit', {'id': address_book.id}) }}">edit</a>

    {{ include('address_book/_delete_form.html.twig') }}
